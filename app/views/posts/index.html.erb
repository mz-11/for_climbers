<div class="post-index-wrapper">
  <div class="container p-3">
    <div class="row">
      <% @posts.each do |post| %>
      
      <%# evaluation_posts.each do |post| %>
        <div class="col-lg-4">
          <div class="post-index-single bg-light my-2 p-3 border-dark rounded">
            <p class="post-author">投稿者： <%= post.user.name %></p>
            <p>(id:<%= post.id %>)</p>
            <p class="title">課題名：<%= post.gym_name + " " + post.grade %></p>
            <p class="category">カテゴリー：<%= post.category %></p>
           
            <!--投稿イメージ-->
            <div class="post-image text-center">
              <%= link_to image_tag(post.image.url, size:""), post_path(id: post.id) %>
            </div>
           
            <p class="post-text">
              <%#= post.description %>
            </p>
            
            <h6>Self-Evaluation</h6>
            <div class="self-evaluation-select">
              
              
              <% if !post.evaluation_users.include?(current_user) %> <!--評価の有無で評価ボタンの表示を変える条件分岐-->
                <ul class="list-inline">
                  <li class="list-inline-item"><%= link_to "1",evaluations_path(post_id: post.id, point: "1", category: post.category), method: :post, class: "btn btn-sm btn-outline-info" %></li>
                  <li class="list-inline-item"><%= link_to "2",evaluations_path(post_id: post.id, point: "2", category: post.category), method: :post, class: "btn btn-sm btn-outline-info" %></li>
                  <li class="list-inline-item"><%= link_to "3",evaluations_path(post_id: post.id, point: "3", category: post.category), method: :post, class: "btn btn-sm btn-outline-info" %></li>
                  <li class="list-inline-item"><%= link_to "4",evaluations_path(post_id: post.id, point: "4", category: post.category), method: :post, class: "btn btn-sm btn-outline-info" %></li>
                  <li class="list-inline-item"><%= link_to "5",evaluations_path(post_id: post.id, point: "5", category: post.category), method: :post, class: "btn btn-sm btn-outline-info" %></li>
                </ul>
              <% else %>
                <% @evaluations.each do |evaluation| %>
                  <% if post.id ==  evaluation.post_id %>
                    <ul class="list-inline">
                      <%# binding.pry %>
                      <li class="list-inline-item"><%= link_to "1",evaluation_path(id: evaluation.id, post_id: post.id, point: "1"), method: :put, class: "btn btn-sm btn-info" %></li>
                      <li class="list-inline-item"><%= link_to "2",evaluation_path(id: evaluation.id, post_id: post.id, point: "2"), method: :put, class: "btn btn-sm btn-info" %></li>
                      <li class="list-inline-item"><%= link_to "3",evaluation_path(id: evaluation.id, post_id: post.id, point: "3"), method: :put, class: "btn btn-sm btn-info" %></li> 
                      <li class="list-inline-item"><%= link_to "4",evaluation_path(id: evaluation.id, post_id: post.id, point: "4"), method: :put, class: "btn btn-sm btn-info" %></li>
                      <li class="list-inline-item"><%= link_to "5",evaluation_path(id: evaluation.id, post_id: post.id, point: "5"), method: :put, class: "btn btn-sm btn-info" %></li>
                      
                      <!--評価ボタン-->
                      <li class="list-inline-item"><%= link_to "評価をリセット",evaluation_path(id: evaluation.id), method: :delete, class: "btn btn-sm btn-outline-warning mt-1" %></li>
                    </ul>
                  <% end %>
                <% end %>
            <% end %>
            </div>
            

            
            <div class="btn-group-sm btn-group-toggle " data-toggle="buttons">
              <label class="btn btn-secondary active">
                <input type="radio" name="options" id="option1" checked>1
                
              </label>
              <label class="btn btn-secondary btn ">
                <input type="radio" name="options" id="option2">2
                
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option3"> 3
              </label>
              <p>（↑理想のボタンイメージ）</p>
            </div>
            
            <!--form_with radio_button-->
            <%#= form_with model: @evaluations, scope: evaluations, url: evaluations/path, local: true do |f| %>
            <!--  <div class="form-group">-->
                <%#= f.label :point, "1" %>
                <%#= f.radio_button :point, 1 %>
            <!--  </div>-->
            <!--  <div class="form-group">-->
                <%#= f.label :point, "2" %>
                <%#= f.radio_button :point, 2 %>
            <!--  </div>-->
             
    
              <%#= f.submit '投稿', class: 'btn btn-primary btn-block' %>
            <%# end %>
        
            <%= link_to "投稿削除", post_path(id: post.id), method: :delete, class: "btn btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  
  
  
      
   
  </div>