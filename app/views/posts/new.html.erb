<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center title">課題の投稿</h2>
      
        <%= form_with model: @topic, local: true do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: 'form-control-file'%>
          </div>
          
          <div class="form-group">
            <%= f.label :gym_name %>
            <%= f.text_area :gym_name, class: 'form-control'%>
          </div>
          
          <div class="form-group">
            <%= f.label :grade %>
            <%= f.text_area :grade, class: 'form-control'%>
          </div>
          
          <div class="form-group">
            <%= f.label :category %>
            <%= f.text_area :category, class: 'form-control'%>
          </div>
         
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
        
        
      </div>
    </div>
  </div>
</div>
