<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center title">課題の投稿</h2>
        
        
        <%= form_with model: @post, url: posts_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <!--表記をimageではなく、"写真"のようにしたい 第2引数に指定すればできるはずだが上手く行かない…-->
            <%= f.file_field :image, class: 'form-control-file'%>
          </div>
          
          <div class="form-group">
            <%= f.label :gym_name %>
            <%= f.text_area :gym_name, class: 'form-control'%>
          </div>
          
          <div class="form-group">
            <%= f.label :grade %>
              <%= f.select :grade, [["8級", "8級"], ["7級", "7級"], ["6級", "6級"], ["5級", "5級"], ["4級", "4級"], ["3級", "3級"], ["2級", "2級"], ["1級", "1級"], ["初段", "初段"], ["二段", "二段"], ["三段", "三段"], ], {include_blank: true, selected: "グレードを選択してください"}, {class: 'form-control'} %>
          </div>
          
          <div class="form-group">
            <%= f.label :category %>
            <%= f.select :category, [["Power", "Power"], ["Dynamic", "Dynamic"], ["Technical", "Technical"], ["Balance", "Balance"], ["Endurance", "Endurance"]], {include_blank: true, selected: "カテゴリー選択"}, {class: 'form-control'} %> <!-- f.select( プロパティ名, タグの情報, {オプション}, {HTMLオプション} )-->
          </div>
         
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
        
        
      </div>
    </div>
  </div>
</div>
