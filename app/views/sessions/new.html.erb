<div class="users-new-wrapper">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 mt-4 users-new-container ">
        <h2 class="text-center">Login</h2>
        
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
        <!--sessionモデルは存在しないので@sessionとはかけない。scorpを用いてどのURLに対してリクエストを出すかというオプションを追加する必要がある-->
        <!--local: trueでAjaxを解除し、flashメッセージを表示する-->
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        
        <%= f.submit "Login", class: "btn btn-block btn-primary mt-4" %>
        <% end %>
        
        
        
